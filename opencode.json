{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true,
      "environment": {}
    },
    "convex": {
      "type": "local",
      "command": ["npx", "-y", "convex@latest", "mcp", "start"],
      "enabled": true,
      "environment": {}
    },
    "better-auth": {
      "type": "remote",
      "url": "https://mcp.inkeep.com/better-auth/mcp",
      "enabled": true
    },
    "expo-mcp": {
      "type": "remote",
      "url": "https://mcp.expo.dev/mcp",
      "enabled": true
    }
  }
}
